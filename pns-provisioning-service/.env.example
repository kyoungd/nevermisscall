# Environment configuration for PNS Provisioning Service

# Service Configuration
SERVICE_NAME=pns-provisioning-service
PORT=3501
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nevermisscall
DATABASE_POOL_SIZE=5
DATABASE_POOL_MAX=20

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256

# Internal Service Authentication
INTERNAL_SERVICE_KEY=nmc-internal-services-auth-key-phase1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://app.example.com

# Additional Settings
WEBHOOK_BASE_URL=https://your-domain.com/webhooks