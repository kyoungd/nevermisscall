# Environment configuration for ts-auth-service

# Service Configuration
SERVICE_NAME=ts-auth-service
PORT=3301
ENVIRONMENT=development
LOG_LEVEL=INFO
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nevermisscall
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30

# JWT Configuration
JWT_SECRET=your-super-secure-256-bit-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=3600
REFRESH_TOKEN_EXPIRES_IN=2592000

# Security Configuration
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://app.example.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Internal Service Authentication
INTERNAL_SERVICE_KEY=nmc-internal-services-auth-key-phase1